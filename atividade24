
def calcular_media():
    soma = 0
    contador = 0

    while True:
        numero = float(input("Digite um número (-1 para sair): "))
        
        if numero == -1:
            break
        
        soma += numero
        contador += 1

    if contador == 0:
        print("Nenhum número foi digitado.")
    else:
        media = soma / contador
        print(f"A média dos números digitados é: {media}")

calcular_media()